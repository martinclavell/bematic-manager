{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/*.old.ts",
    "src/**/*.refactored.ts",
    "src/shutdown.ts",
    "src/error-handlers.ts",
    "src/gateway/handlers/**",
    "src/gateway/message-buffer.ts",
    "src/services/handlers/**",
    "src/services/index.ts"
  ],
  "references": [
    { "path": "../common" },
    { "path": "../db" },
    { "path": "../bots" }
  ]
}

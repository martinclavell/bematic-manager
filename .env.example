# ============================
# Cloud (Railway) Environment
# ============================

# Slack App Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Agent Authentication (comma-separated API keys)
AGENT_API_KEYS=agent-key-1,agent-key-2

# Database
DATABASE_URL=./data/bematic.db

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# WebSocket
WS_HEARTBEAT_INTERVAL_MS=30000
WS_AUTH_TIMEOUT_MS=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=50

# ============================
# Agent (Local) Environment
# ============================

# Cloud Connection
CLOUD_WS_URL=wss://your-railway-app.up.railway.app/ws/agent
AGENT_ID=agent-local-01
AGENT_API_KEY=agent-key-1

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key

# Execution
MAX_CONCURRENT_TASKS=3
# LOG_LEVEL=debug

# Reconnection
WS_RECONNECT_BASE_DELAY_MS=1000
WS_RECONNECT_MAX_DELAY_MS=30000

# ============================
# Model Routing (optional)
# ============================

# Master switch â€” set to "false" to disable intelligent model routing
# When disabled, all tasks use the project's defaultModel
# MODEL_ROUTING_ENABLED=true

# Strategy:
#   - Sonnet 4.5: Default for all tasks (read-only, analysis, planning)
#   - Opus 4: Only for CoderBot write commands (fix, feature, refactor, test)

# Override the default model for each tier
# MODEL_TIER_STANDARD=claude-sonnet-4-5-20250929
# MODEL_TIER_PREMIUM=claude-opus-4-20250514

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@bematic/common": ["packages/common/src"],
      "@bematic/db": ["packages/db/src"],
      "@bematic/bots": ["packages/bots/src"],
      "@bematic/cloud": ["packages/cloud/src"],
      "@bematic/agent": ["packages/agent/src"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  }
}
